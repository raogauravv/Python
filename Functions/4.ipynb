   "source": [
    "# Write a function to print the first n lines of the fillowing pattern"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "*****\n",
      "****\n",
      "***\n",
      "**\n",
      "*\n"
     ]
    }
   ],
   "source": [
    "# * * *\n",
    "# * *\n",
    "# *\n",
    "\n",
    "def pattern(i):\n",
    "    while i>=1:\n",
    "        print(i*\"*\")\n",
    "        i-=1\n",
    "\n",
    "pattern(5)"
   ]
