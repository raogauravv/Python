   "source": [
    "# Write a recursive function to calculate the sum of first n natural numbers"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Enter the number: 10\n"
     ]
    },
    {
     "data": {
      "text/plain": [
       "55"
      ]
     },
     "execution_count": 1,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "#n=(1+2+3....+n-1)+n\n",
    "def recur_sum(n):\n",
    "    if n==1:\n",
    "        return(1)\n",
    "    else:\n",
    "        sum=n+recur_sum(n-1)\n",
    "        return(sum)\n",
    "a=int(input(\"Enter the number: \"))\n",
    "recur_sum(a)"
   ]
